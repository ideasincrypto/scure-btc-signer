{
  "name": "@scure/btc-signer",
  "version": "1.0.1",
  "description": "Audited & minimal library for creating, signing & decoding Bitcoin transactions: with Schnorr, Taproot, UTXO & PSBT",
  "files": [
    "index.js",
    "index.js.map",
    "index.d.ts",
    "index.d.ts.map",
    "index.ts",
    "esm/index.js",
    "esm/index.js.map"
  ],
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./esm/index.js",
      "default": "./index.js"
    }
  },
  "dependencies": {
    "@noble/curves": "~1.1.0",
    "@noble/hashes": "~1.3.1",
    "@scure/base": "~1.1.1",
    "micro-packed": "~0.3.2"
  },
  "devDependencies": {
    "@scure/bip32": "~1.3.1",
    "micro-packed-debugger": "0.3.1",
    "micro-should": "0.4.0",
    "prettier": "2.8.4",
    "typescript": "5.0.2"
  },
  "author": "Paul Miller (https://paulmillr.com)",
  "license": "MIT",
  "homepage": "https://github.com/paulmillr/scure-btc-signer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/scure-btc-signer.git"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "lint": "prettier --check index.ts",
    "format": "prettier --write index.ts",
    "test": "node test/index.test.mjs",
    "test:extended": "node --experimental-loader ./test/bitcoinjs-test/esm-loader.js ./test/bitcoinjs-test/index.test.js",
    "test:slow": "node test/index.test.js && node test/slow.test.js"
  },
  "keywords": [
    "bitcoin",
    "btc",
    "sign",
    "tx",
    "transaction",
    "address",
    "taproot",
    "schnorr",
    "psbt",
    "p2pkh",
    "p2wpkh",
    "p2sh",
    "p2wsh",
    "p2tr"
  ],
  "funding": "https://paulmillr.com/funding/"
}